{ 
    "compilerOptions": {
      "lib": ["es2020"],
      "target": "es2020",
      "module": "commonjs",
      "strict": true,
      "outDir": "function",
      "sourceMap": true,
      "moduleResolution": "node",
      "declaration": true,
      "removeComments": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "strictNullChecks": true,
      "forceConsistentCasingInFileNames": true,
      "allowJs": true,
      "resolveJsonModule": true,
      "rootDir": "./"
    },
    "include": ["./src/**/*", "./test/**/*"],
    "exclude": ["./node_modules"],
}