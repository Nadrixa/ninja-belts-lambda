{
  "name": "ninja-belts-lambda",
  "version": "1.0.0",
  "description": "Introductory project to testable AWS lambdas",
  "main": "index.js",
  "scripts": {
    "build:test": "tsc -p tsconfig.test.json",
    "dynamoDB:install": "sls dynamodb install",
    "dynamoDB:start": "sls dynamodb start",
    "deploy:offline": "sls offline start --httpPort=3000 --lambdaPort=3002 --websocketPort=3001",
    "lint": "eslint --max-warnings 0",
    "pretest": "npm run build:test",
    "test": "npm-run-all -s -n test:unit test:it test:e2e",
    "pretest:it": "npm run ITTest:setupEnv",
    "test:it": "npm-run-all -l -n -s -c ITTest:waitForEnv ITTest:runTest ITTest:cleanupEnv",
    "ITTest:setupEnv": "npm-run-all -l -n -s dynamoDB:install dynamoDB:start &",
    "ITTest:waitForEnv": "wait-port 8000",
    "ITTest:runTest": "jest -c jest.config.IT.js --coverage",
    "ITTest:cleanupEnv": "kill $(lsof -t -i:8000)",
    "test:unit": "jest --verbose --coverage",
    "pretest:e2e": "npm run E2ETest:setupEnv",
    "test:e2e": "npm-run-all -c -s -n -l E2ETest:waitForEnv E2ETest:runTest E2ETest:cleanupEnv",
    "E2ETest:setupEnv": "npm run deploy:offline &",
    "E2ETest:waitForEnv": "wait-port 3000",
    "E2ETest:runTest": "jest -c jest.config.e2e.js",
    "E2ETest:cleanupEnv": "kill $(lsof -t -i:3000)"
  },
  "keywords": [
    "aws",
    "lambda",
    "ninja"
  ],
  "contributors": [
    {
      "name": "Adrián Muñoz Gámez",
      "url": "https://github.com/Nadrixa"
    },
    {
      "name": "Juan Carlos Serrano Chicharro",
      "url": "https://github.com/juancsch"
    }
  ],
  "license": "ISC",
  "dependencies": {
    "aws-sdk": "2.991.0"
  },
  "devDependencies": {
    "@types/aws-lambda": "8.10.83",
    "@types/jest": "27.0.1",
    "@typescript-eslint/eslint-plugin": "4.31.1",
    "axios": "0.21.4",
    "eslint": "7.32.0",
    "eslint-config-standard-with-typescript": "21.0.1",
    "eslint-plugin-import": "2.24.2",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-promise": "5.1.0",
    "husky": "4.3.8",
    "jest": "27.2.0",
    "lint-staged": "11.1.2",
    "npm-run-all": "4.1.5",
    "serverless": "2.59.0",
    "serverless-dynamodb-local": "0.2.40",
    "serverless-offline": "8.2.0",
    "serverless-plugin-typescript": "2.0.0",
    "ts-jest": "27.0.5",
    "typescript": "4.4.3",
    "wait-port": "0.2.9"
  },
  "husky": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{ts}": [
      "npm run lint:fix"
    ]
  }
}
